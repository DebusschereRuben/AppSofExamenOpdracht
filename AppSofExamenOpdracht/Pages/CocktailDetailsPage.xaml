<Page x:Class="AppSofExamenOpdracht.Pages.CocktailDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppSofExamenOpdracht.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CocktailDetailsPage">

    <Grid Background="SkyBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="img_cocktail" Height="150" Width="150" Margin="10"/>
            <TextBlock x:Name="txt_name" Text="Cocktail Name" TextAlignment="Center" Margin="10" Padding="5" Background="Pink"/>
            <Label x:Name="lbl_glass" Content="Glass: " Margin="10" Padding="5" Background="Pink"/>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="lbl_alcoholic" Content="Alcoholic: " Margin="10" Padding="5" Background="Pink"/>
            <Label x:Name="lbl_categorie" Content="Category: " Margin="10" Padding="5" Background="Pink"/>
            <TextBlock x:Name="txt_instructions" Text="Instructions" TextAlignment="Center" Margin="10" Padding="5" Background="Pink"/>
        </StackPanel>

        <ListBox x:Name="lst_ingredients" Grid.Column="2" Margin="10" Background="Pink"/>
    </Grid>
</Page>
