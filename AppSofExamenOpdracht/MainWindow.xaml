<Window x:Class="AppSofExamenOpdracht.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppSofExamenOpdracht"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="400" MinHeight="200">
    <Grid Background="SlateBlue">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10">
            <Button Content="Cocktails" Click="Go_to_Cocktails" Margin="5" Height="25" Width="200" Background="DarkSlateBlue" Foreground="White"/>
            <Button Content="Meals" Click="Go_to_Meals" Margin="5" Height="25" Width="200" Background="DarkSlateBlue" Foreground="White"/>
            <Button Content="Random" Click="Go_to_Random" Margin="5" Height="25" Width="200" Background="DarkSlateBlue" Foreground="White"/>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,50,0,0"/>
    </Grid>
</Window>
